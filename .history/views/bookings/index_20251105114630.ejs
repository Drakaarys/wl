<% layout("/layouts/boilerplate") %>

<h1>Your Bookings</h1>
<% if (bookings.length === 0) { %>
  <p>No bookings yet.</p>
<% } else { %>
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% bookings.forEach(booking => { %>
      <div class="col">
        <div class="card " style="margin-bottom: 25px;">
          <img src="<%= booking.listing.image %>" class="card-img-top" alt="<%= booking.listing.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= booking.listing.title %></h5>
            <p>Check-in: <%= booking.checkIn.toDateString() %></p>
            <p>Check-out: <%= booking.checkOut.toDateString() %></p>
            <p>Total: â‚¹<%= booking.totalPrice %></p>
            <a href="/bookings/<%= booking._id %>" class="btn btn-outline-primary">View Details</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
