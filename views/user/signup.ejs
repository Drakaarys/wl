<% layout("/layouts/boilerplate")%>
<h2 class="col-10 offset-1">Signup on Wanderlust:</h2>
<div class="row mt-4">
    <div class="col-10 offset-1">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div>
                <label for="username" class="form-label">Username:</label> 
                <input type="text" name="username" id="username" class="form-control" required/>
                <div class="invalid-feedback">username can't be empty</div><br>
            </div>
            <div>
                <label for="email" class="form-label">Email:</label> 
                <input type="email" name="email" id="email" class="form-control" required/><br>
                <!-- <div class="invalid-feedback">email can't be empty</div><br> -->
            </div>
            <div>
                <label for="password" class="form-label">Password:</label> 
                <input type="password" name="password" id="password" class="form-control" required/>
                <!-- <div class="invalid-feedback">password can't be empty</div><br> --><br>
            </div>
            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
        </form>
    </div>
</div>